@model IEnumerable<Student_Section_ManagementSystemProject.Models.Student>

   <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 5px;
        padding: 20px;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .add-button {
        display: inline-block;
        background-color: skyblue;
        color: black;
        padding: 5px 8px;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 10px;
        margin-left: 88%;
        
    }

    .add-button:hover {
        background-color: steelblue;
        color: white;
    }

    .student-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .student-table th, .student-table td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    .student-table th {
        background-color: #007bff;
        color: white;
        text-align: center;
    }

    .student-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .edit-link {
        color: blue;
        text-decoration: none;
    }

    .delete-link {
        color: red;
        text-decoration: none;
    }

    .edit-link:hover {
        text-decoration: underline;
        color: darkblue;
    }
    
    .delete-link:hover {
        text-decoration: underline;
        color: darkred;
    }

    .alert {
        padding: 5px;
        background-color: #4CAF50;
        color: white;
        text-align: center;
        border-radius: 5px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .alert-success {
        background-color: #28a745;
    }
</style>


<h2>Student List</h2>
<a href="/Students/Create" class="add-button">Add New Student</a>

<table class="student-table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Email</td>
            <td>
                <a href="/Students/Edit/@student.Id" class="edit-link">Edit</a> |
                <a href="/Students/Delete/@student.Id" class="delete-link">Delete</a>
            </td>
        </tr>
    }
</table>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>

    <script>
        setTimeout(function () {
            let alertBox = document.querySelector('.alert');
            if (alertBox) {
                alertBox.style.display = 'none';
            }
        }, 2000);
    </script>
}