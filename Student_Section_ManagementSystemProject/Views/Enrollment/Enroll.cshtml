@model Student_Section_ManagementSystemProject.Models.Schedule
<h2>Enroll Students to @ViewBag.Schedule.Subject.Name</h2>

<form method="post">
    <input type="hidden" name="scheduleId" value="@ViewBag.Schedule.Id" />
    <label>Select Student:</label>
    <select name="studentId">
        @foreach (var student in ViewBag.Students)
        {
            <option value="@student.Id">@student.Name</option>
        }
    </select>
    <button type="submit">Enroll</button>
</form>

<h3>Enrolled Students</h3>
<ul>
    @foreach (var student in ViewBag.Schedule.EnrolledStudents)
    {
        <li>
            @student.Name
            <a href="/Enrollment/RemoveEnrollment?scheduleId=@ViewBag.Schedule.Id&studentId=@student.Id">Remove</a>
        </li>
    }
</ul>