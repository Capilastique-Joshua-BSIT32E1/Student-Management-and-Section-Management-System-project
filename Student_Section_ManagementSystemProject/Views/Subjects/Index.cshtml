@model IEnumerable<Subject>

@{
    ViewData["Title"] = "Subjects";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 5px;
        padding: 20px;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .add-button {
        display: inline-block;
        background-color: skyblue;
        color: black;
        padding: 5px 8px;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 10px;
        margin-left: 88%;
    }

        .add-button:hover {
            background-color: steelblue;
            color: white;
        }

    .subject-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .subject-table th, .subject-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .subject-table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .subject-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .edit-link {
        color: blue;
        text-decoration: none;
    }

    .delete-link {
        color: red;
        text-decoration: none;
    }

    .edit-link:hover {
        text-decoration: underline;
        color: darkblue;
    }

    .delete-link:hover {
        text-decoration: underline;
        color: darkred;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        border-radius: 8px;
        width: 350px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        text-align: center;
    }

    .modal-buttons {
        margin-top: 15px;
    }

        .modal-buttons a {
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

    .confirm-button {
        background-color: red;
        color: white;
    }

    .cancel-button {
        background-color: gray;
        color: white;
    }

    .confirm-button:hover {
        background-color: darkred;
        color: white;
    }

    .cancel-button:hover {
        background-color: #666;
        color: white;
    }
</style>

<h2>Subjects</h2>
<a asp-action="Create" class="add-button">Add New Subject</a>

<table class="subject-table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var subject in Model)
    {
        <tr>
            <td>@subject.Name</td>
            <td>@subject.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@subject.Id" class="edit-link">Edit</a> |
                <a href="#" class="delete-link" onclick="showDeleteModal(@subject.Id)">Delete</a>
            </td>
        </tr>
    }
</table>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <p>Are you sure you want to delete this subject?</p>
        <div class="modal-buttons">
            <a id="confirmDelete" class="confirm-button">Yes, Delete</a>
            <a class="cancel-button" onclick="closeDeleteModal()">Cancel</a>
        </div>
    </div>
</div>

<script>
    let subjectIdToDelete = 0;

    function showDeleteModal(subjectId) {
        subjectIdToDelete = subjectId;
        document.getElementById("deleteModal").style.display = "block";
    }

    function closeDeleteModal() {
        document.getElementById("deleteModal").style.display = "none";
    }

    document.getElementById("confirmDelete").addEventListener("click", function () {
        window.location.href = "/Subjects/Delete/" + subjectIdToDelete;
    });

    window.onclick = function (event) {
        let modal = document.getElementById("deleteModal");
        if (event.target === modal) {
            modal.style.display = "none";
        }
    }
</script>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>


    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <script>
        setTimeout(function () {
            let alertBox = document.querySelector('.alert');
            if (alertBox) {
                alertBox.style.display = 'none';
            }
        }, 2000);
    </script>
}