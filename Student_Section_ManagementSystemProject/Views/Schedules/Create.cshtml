@model Student_Section_ManagementSystemProject.Models.Schedule

@{
    ViewData["Title"] = "Create Schedule";
}

<h2>Create Schedule</h2>

@if (TempData["ScheduleErrorMessage"] != null)
{
    <div class="alert alert-danger" id="errorMessage">
        @TempData["ScheduleErrorMessage"]
    </div>
}

<script>
    setTimeout(function () {
        let errorBox = document.getElementById('errorMessage');
        if (errorBox) {
            errorBox.style.display = 'none';
        }
    }, 4000);
</script>

<div class="form-container">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="SubjectId">Subject:</label>
            <select asp-for="SubjectId" id="SubjectId" class="input-field">
                @foreach (var subject in ViewBag.Subjects)
                {
                    <option value="@subject.Id">@subject.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="StartTime">Start Time:</label>
            <input type="datetime-local" asp-for="StartTime" id="StartTime" class="input-field" required />
        </div>

        <div class="form-group">
            <label for="EndTime">End Time:</label>
            <input type="datetime-local" asp-for="EndTime" id="EndTime" class="input-field" required />
        </div>

        <div class="form-actions">
            <button type="submit" class="save-button">Save</button>
        </div>
    </form>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 5px;
        padding: 20px;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

    .form-container {
        background: white;
        padding: 20px;
        width: 350px;
        margin: 0 auto;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input, select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .save-button {
        width: 100%;
        background-color: skyblue;
        color: black;
        padding: 8px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        .save-button:hover {
            background-color: steelblue;
            color: white;
        }

    .alert {
        padding: 5px;
        background-color: #4CAF50;
        color: white;
        text-align: center;
        border-radius: 5px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .alert-danger {
        background-color: #dc3545;
    }

    .alert-success {
        background-color: #28a745;
    }
</style>